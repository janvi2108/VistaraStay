<% layout("/layout/boilerplate") %>
<body>
<div class="container my-5">
    <h3 class="mb-4">Edit your Listing</h3>

    <!-- Edit Form -->
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation mb-3" novalidate>
        <!-- Title -->
        <div class="mb-3">
            <label for="title-<%= listing._id %>" class="form-label">Title</label>
            <input type="text" name="listing[title]" id="title-<%= listing._id %>" value="<%= listing.title %>" class="form-control" required>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label for="description-<%= listing._id %>" class="form-label">Description</label>
            <textarea class="form-control" id="description<%= listing._id %>" name="listing[description]" rows="3" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a description.</div>
        </div>

        <!-- Image Link -->
        <div class="mb-3">
            <label for="image-<%= listing._id %>" class="form-label">Image Link</label>
            <!-- Changed name attribute here -->
            <input type="url" class="form-control" id="image-<%= listing._id %>" name="listing[image][url]" value="<%= listing.image?.url || '' %>" required>
            <div class="invalid-feedback">Please enter a valid image URL.</div>
        </div>

        <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-4">
                <label for="price-<%= listing._id %>" class="form-label">Price (â‚¹/night)</label>
                <input type="number" class="form-control" id="price-<%= listing._id %>" name="listing[price]" value="<%= listing.price %>" required min="1">
                <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-4">
                <label for="country-<%= listing._id %>" class="form-label">Country</label>
                <input type="text" class="form-control" id="country-<%= listing._id %>" name="listing[country]" value="<%= listing.country %>" required>
                <div class="invalid-feedback">Please enter the country.</div>
            </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
            <label for="location-<%= listing._id %>" class="form-label">Location</label>
            <input type="text" class="form-control" id="location-<%= listing._id %>" name="listing[location]" value="<%= listing.location %>" required>
            <div class="invalid-feedback">Please enter the location.</div>
        </div>

        <!-- Edit Button -->
        <button type="submit" class="btn btn-danger">Edit</button>
    </form>

    <!-- Delete Form -->
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline" 
          onsubmit="return confirm('Are you sure you want to delete this listing?');">
        <button type="submit" class="btn btn-dark btn-sm">Delete</button>
    </form>
    <hr>
</div>

<!-- Bootstrap validation JS -->
<script>
(() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });
})();
</script>
</body>
