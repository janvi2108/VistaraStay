<% layout("layout/boilerplate") %>

<h3 class="mb-4 fw-bold">All Listings</h3>

<% if (listings && listings.length > 0) { %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% listings.forEach(listing => { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="listing-container position-relative">
            <img 
              src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>" 
              class="listing-img" 
              alt="<%= listing.title %>"
            >

            <div class="listing-details mt-2">
              <h5 class="listing-title mb-1"><%= listing.title %></h5>
              <p class="listing-price">â‚¹<%= listing.price?.toLocaleString("en-IN") || 'N/A' %> / night</p>
              <p class="text-muted small mb-0"><%= listing.location %>, <%= listing.country %></p>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p>No listings available. <a href="/listings/new">Create one</a></p>
<% } %>
